<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_deisgn"

    android:padding="20dp"
    tools:context=".SendEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"

        android:orientation="vertical"
        android:background="@drawable/mail_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/send_btn"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/send_svgrepo_com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="To:"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/edittext_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"

            android:textColor="@color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="62dp" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Subject:"
           android:textColor="@color/white"
           android:layout_marginLeft="20dp"
           android:textSize="25sp"
           android:fontFamily="@font/lato_bold"
           android:layout_marginTop="40dp"/>
        <EditText
            android:id="@+id/edittext_subject"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_bold"
            android:text=""
            android:maxLines="10"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:text="Message:"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lato_bold"/>

        <EditText
            android:id="@+id/edittext_msg"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:lines="10"

            android:gravity="start"
            android:textSize="20sp"
            android:padding="5dp"
            android:background="@drawable/custom_msg_bg"
            android:fontFamily="@font/lato_bold"

            android:layout_marginTop="15dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
